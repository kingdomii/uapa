    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asistente Virtual UAPA</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f2f2f2;
        }
        .logo {
            margin-top: 50px;
            margin-bottom: 20px;
        }
        .search-container {
            display: flex;
            margin-bottom: 20px;
        }
        #query-input {
            width: 500px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 24px;
            outline: none;
        }
        #send-button, #voice-button {
            margin-left: 10px;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #4285f4;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        #chat-container {
            width: 600px;
            height: 400px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            overflow-y: auto;
            background-color: #fff;
        }
    </style>
